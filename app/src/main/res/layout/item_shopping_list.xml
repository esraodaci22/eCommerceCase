<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:layout_width="154dp"
    android:layout_height="254dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_bg"
    android:elevation="4dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgShoppingItem"
        android:layout_width="138dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        />

    <TextView
        android:id="@+id/priceShoppingItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="@color/blue"
        tools:text="15.000 â‚º"/>

    <TextView
        android:id="@+id/nameShoppingItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:textSize="12sp"
        android:textColor="@color/black"
        tools:text="iPhone 13 Pro Max 256Gb"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddToChart"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="@string/add_to_chart"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:background="@drawable/rounded_corner_button_bg"
        />

</androidx.appcompat.widget.LinearLayoutCompat>